<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FileModule.EnterColorCombination"
    android:background="#e1e1e1">
    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select color combination"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_margin="15dp"/>
    <LinearLayout
        android:layout_below="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:id="@+id/combination">
        <ImageView
            android:id="@+id/redOvalLogin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/red_oval_auth"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/greenOvalLogin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/green_auth"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/blueOvalLogin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/blue_oval_auth"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/combination"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp"
        android:id="@+id/temp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etcodeLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_white_et"
            android:clickable="false"
            android:gravity="center"
            android:inputType="text"
            android:padding="5dp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/resetImgLogin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/reset_logo" />
    </LinearLayout>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="login" />
</RelativeLayout>